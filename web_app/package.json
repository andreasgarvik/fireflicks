{
  "name": "fireflicks",
  "description": "A project showcasing the Firebase Admin SDK",
  "version": "1.0.0",
  "author": "Jen Person <personjennifer@google.com>",
  "private": true,
  "scripts": {
    "fmt": "prettier --write src/**.{ts,scss,js} src/**/**/**.{ts,scss,js} test/**/**.ts test/**/**.js *.js",
    "dev": "concurrently -k --names 'FIREBASE,WEBPACK' 'firebase serve' 'cross-env NODE_ENV=development webpack-dev-server --hot'",
    "build": "npm run fmt && cross-env NODE_ENV=production webpack --progress --hide-modules",
    "test": "npm run fmt && jest test --no-cache || true"
  },
  "dependencies": {
    "firebase": "^4.13.1",
    "fs": "0.0.1-security",
    "html-loader": "^0.5.1",
    "install": "^0.10.4",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^20.0.4",
    "jest-vue-preprocessor": "^1.1.0",
    "net": "^1.0.2",
    "npm": "^5.7.1",
    "raven-js": "^3.24.2",
    "request": "^2.85.0",
    "request-promise": "^4.2.2",
    "tls": "0.0.1",
    "vue": "^2.3.3",
    "vue-router": "^3.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.0.3",
    "@types/core-js": "^0.9.42",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.22",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.0.0",
    "babel-jest": "^20.0.3",
    "babel-loader": "^6.0.0",
    "babel-preset-env": "^1.5.1",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.1.1",
    "concurrently": "^3.5.1",
    "cross-env": "^3.2.4",
    "css-loader": "^0.25.0",
    "file-loader": "^0.9.0",
    "jest": "^20.0.4",
    "node-sass": "^4.13.1",
    "postcss-loader": "^2.0.6",
    "postcss-sass": "^0.2.0",
    "prettier": "^1.5.3",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "ts-loader": "^2.3.2",
    "vue-template-compiler": "^2.4.2",
    "vue-template-compiler-loader": "^1.0.4",
    "vue-template-loader": "^0.3.1",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5"
  },
  "jest": {
    "testRegex": "spec.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.html": "<rootDir>/test/__pre__/template",
      "^.+\\.(ts|tsx)$": "<rootDir>/test/__pre__/typescript"
    }
  }
}
